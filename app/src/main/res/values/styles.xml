<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <!--Main activity style-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--Hamburger button style-->
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/nav_menu_icon</item>
    </style>

    <!--Alert dialog style-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">@dimen/corners_default</item>
        <item name="textColorAlertDialogListItem">@color/text_dark</item>
        <item name="colorControlActivated">@color/dialog_check_active</item>
        <item name="colorControlNormal">@color/dialog_check_normal</item>
        <item name="colorBackgroundFloating">@color/dialog_style_light</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_dark</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button_negative</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button_positive</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--Number picker-->
    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

</resources>
