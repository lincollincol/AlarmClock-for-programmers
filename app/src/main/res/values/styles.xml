<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!--Main activity light theme-->
    <style name="LightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="colorControlNormal">@color/violet_default</item>
        <item name="android:colorControlNormal">@color/violet_default</item>

        <item name="button_disable_color">@color/violet_light</item>
        <item name="button_default_color">@color/violet_default</item>
        <item name="text_default_color">@color/text_default_color_light</item>
        <item name="text_secondary_color">@color/violet_default</item>
        <item name="text_achieve_color">@color/text_default_color_dark</item>
        <item name="icon_default_color">@color/violet_default</item>
        <item name="background_card_color">@color/card_light</item>
        <item name="background_card_alarm_enable">@color/alarm_enable_light</item>

        <item name="dialog_background_color">@color/theme_light_end</item>
        <item name="dialog_positive_color">@color/violet_dark</item>
        <item name="dialog_negative_color">@color/violet_dark</item>
        <item name="dialog_checked_color">@color/violet_dark</item>
        <item name="dialog_unchecked_color">@color/violet_default</item>
        <item name="menu_selected_shape_color">@color/violet_default</item>
        <item name="menu_shape_translucent_color">@color/item_gray_translucent</item>
        <item name="menu_item_color">@color/text_default_color_light</item>
        <item name="menu_item_selected_color">@color/violet_default</item>
        <item name="switch_thumb_color">@color/violet_dark</item>
        <item name="switch_track_enable_color">@color/violet_default</item>
        <item name="switch_track_disable_color">@color/violet_light</item>
        <item name="progress_track_color">@color/progress_track_light</item>
        <item name="progress_gradient_start_color">@color/violet_light</item>
        <item name="progress_gradient_center_color">@color/violet_default</item>
        <item name="progress_gradient_end_color">@color/violet_dark</item>
        <item name="app_gradient_start_color">@color/theme_light_start</item>
        <item name="app_gradient_end_color">@color/theme_light_end</item>
        <item name="dismiss_shape_color">@color/violet_default</item>
        <item name="correct_color">@color/correct</item>
        <item name="incorrect_color">@color/incorrect</item>
        <item name="view_completed_color">@color/item_silver_translucent</item>
        <item name="icon_completed_color">@color/violet_default</item>

    </style>

    <!--Main activity Dark theme-->
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="colorControlNormal">@color/green_default</item>
        <item name="android:colorControlNormal">@color/green_default</item>

        <item name="button_disable_color">@color/green_light</item>
        <item name="button_default_color">@color/green_default</item>
        <item name="text_default_color">@color/text_default_color_dark</item>
        <item name="text_secondary_color">@color/green_default</item>
        <item name="text_achieve_color">@color/text_default_color_dark</item>
        <item name="icon_default_color">@color/green_default</item>
        <item name="background_card_color">@color/card_dark</item>
        <item name="background_card_alarm_enable">@color/alarm_enable_dark</item>

        <item name="dialog_background_color">@color/theme_dark_start</item>
        <item name="dialog_positive_color">@color/green_default</item>
        <item name="dialog_negative_color">@color/green_default</item>
        <item name="dialog_checked_color">@color/green_dark</item>
        <item name="dialog_unchecked_color">@color/green_default</item>
        <item name="menu_selected_shape_color">@color/green_default</item>
        <item name="menu_shape_translucent_color">@color/item_gray_translucent</item>
        <item name="menu_item_color">@color/text_default_color_dark</item>
        <item name="menu_item_selected_color">@color/green_default</item>
        <item name="switch_thumb_color">@color/green_dark</item>
        <item name="switch_track_enable_color">@color/green_default</item>
        <item name="switch_track_disable_color">@color/green_light</item>
        <item name="progress_track_color">@color/progress_track_dark</item>
        <item name="progress_gradient_start_color">@color/green_light</item>
        <item name="progress_gradient_center_color">@color/green_default</item>
        <item name="progress_gradient_end_color">@color/green_dark</item>
        <item name="app_gradient_start_color">@color/theme_dark_start</item>
        <item name="app_gradient_end_color">@color/theme_dark_end</item>
        <item name="dismiss_shape_color">@color/green_default</item>
        <item name="correct_color">@color/correct</item>
        <item name="incorrect_color">@color/incorrect</item>
        <item name="view_completed_color">@color/item_silver_translucent</item>
        <item name="icon_completed_color">@color/green_default</item>

    </style>

    <!--Alert dialog style-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">@dimen/corners_default</item>
        <item name="colorControlActivated">?attr/dialog_checked_color</item>
        <item name="colorControlNormal">?attr/dialog_unchecked_color</item>
        <item name="colorBackgroundFloating">?attr/dialog_background_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="textColorAlertDialogListItem">?attr/text_default_color</item>
        <item name="android:textColor">?attr/text_default_color</item>
        <item name="android:textColorSecondary">?attr/text_default_color</item>
        <item name="android:textColorPrimary">?attr/text_default_color</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/dialog_negative_color</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/dialog_positive_color</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--Number picker-->
    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">?attr/text_default_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <!--Toolbar back arrow color-->
    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <item name="android:tint">?attr/icon_default_color</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <!-- Activity restart animation-->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation" >@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--Divide line-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
