<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/alarms__list_of_alarms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/alarms__editor_layout"/>

    <android.support.v7.widget.CardView
        android:id="@+id/alarms__editor_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_editor_height"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/corners_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/alarms_editor__confirm"
                android:layout_width="@dimen/button_size_medium"
                android:layout_height="@dimen/button_size_medium"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/ic_check"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/alarms_editor__turn_on_off"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <Switch
                android:id="@+id/alarms_editor__turn_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_small"
                android:thumbTint="@color/toggle_alarms"
                app:layout_constraintLeft_toRightOf="@id/alarms_editor__confirm"
                app:layout_constraintRight_toLeftOf="@id/alarms_editor__close"/>

            <ImageView
                android:id="@+id/alarms_editor__close"
                android:layout_width="@dimen/button_size_medium"
                android:layout_height="@dimen/button_size_medium"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/ic_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/alarms_editor__turn_on_off"/>

            <android.support.constraint.Barrier
                android:id="@+id/alarms_editor__panel_barrier"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="alarms_editor__turn_on_off,
                 alarms_editor__close, alarms_editor__confirm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                app:layout_constraintTop_toBottomOf="@id/alarms_editor__panel_barrier"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <!--https://www.zoftino.com/android-timepicker-example-->

            <ImageView
                android:id="@+id/alarms_editor__more"
                android:layout_width="@dimen/button_size_large"
                android:layout_height="@dimen/button_size_large"
                android:src="@drawable/ic_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/alarms__add_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:elevation="@dimen/elevation_default"
        android:src="@drawable/ic_add"
        app:fabSize="normal"
        app:backgroundTint="@color/button_add_alarms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>