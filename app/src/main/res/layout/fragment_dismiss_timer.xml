<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app_gradient"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/timer_dismiss__circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_dismiss_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/timer_dismiss__message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dismiss_message"
        android:textColor="?attr/text_default_color"
        android:textSize="@dimen/text_large"
        app:layout_constraintTop_toTopOf="@id/timer_dismiss__circle"
        app:layout_constraintBottom_toBottomOf="@id/timer_dismiss__circle"
        app:layout_constraintLeft_toLeftOf="@id/timer_dismiss__circle"
        app:layout_constraintRight_toRightOf="@id/timer_dismiss__circle"/>

</android.support.constraint.ConstraintLayout>