<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--todo change margins to guidelines-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:id="@+id/settings__theme_switch_title"
        android:text="Dark theme"
        android:textSize="@dimen/text_medium"
        android:textColor="?attr/text_default_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/settings__theme_switch"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/settings__theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        app:trackTint="@drawable/switch_toggle_track"
        app:thumbTint="?attr/switch_thumb_color"
        app:layout_constraintTop_toTopOf="@id/settings__theme_switch_title"
        app:layout_constraintBottom_toBottomOf="@id/settings__theme_switch_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/settings__theme_switch_title"/>


</android.support.constraint.ConstraintLayout>