<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settings__toolbar"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:theme="@style/ThemeToolbar"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/margin_medium"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/settings__margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_medium"/>

    <android.support.constraint.Guideline
        android:id="@+id/settings__margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_medium"/>

    <TextView
        android:id="@+id/settings__theme_switch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark theme"
        android:layout_marginTop="@dimen/margin_small"
        android:textSize="@dimen/text_medium"
        android:textColor="?attr/text_default_color"
        app:layout_constraintTop_toBottomOf="@id/settings__toolbar"
        app:layout_constraintLeft_toLeftOf="@id/settings__margin_left"
        app:layout_constraintRight_toLeftOf="@id/settings__theme_switch"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/settings__theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:trackTint="@drawable/switch_toggle_track"
        app:thumbTint="?attr/switch_thumb_color"
        app:layout_constraintTop_toTopOf="@id/settings__theme_switch_title"
        app:layout_constraintBottom_toBottomOf="@id/settings__theme_switch_title"
        app:layout_constraintRight_toRightOf="@id/settings__margin_right"
        app:layout_constraintLeft_toRightOf="@id/settings__theme_switch_title"/>


</android.support.constraint.ConstraintLayout>