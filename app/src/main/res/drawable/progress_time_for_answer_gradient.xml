<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:useLevel="false">
                <corners android:radius="5dp"/>
                <gradient
                    android:endColor="?attr/progress_gradient_end_color"
                    android:centerColor="?attr/progress_gradient_center_color"
                    android:startColor="?attr/progress_gradient_start_color"
                    android:useLevel="false"/>
            </shape>
        </clip>
    </item>
</selector>