<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">
    <shape
        android:innerRadiusRatio="2.5"
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="true">

        <gradient
            android:angle="0"
            android:endColor="?attr/progress_gradient_end_color"
            android:centerColor="?attr/progress_gradient_center_color"
            android:startColor="?attr/progress_gradient_start_color"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>